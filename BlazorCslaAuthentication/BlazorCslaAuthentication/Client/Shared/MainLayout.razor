@inherits LayoutComponentBase

<div class="page">
  <div class="sidebar">
    <NavMenu />
  </div>

  <div class="main">
    <div class="top-row px-4 auth">
      <AuthorizeView>
        <Authorized>
          Hello, @context.User.Identity.Name
          <a href="/Logout">Log out</a>
        </Authorized>
        <NotAuthorized>
          <a href="/Login">Log in</a>
        </NotAuthorized>
      </AuthorizeView>
      <a href="https://cslanet.com" target="_blank">About</a>
    </div>

    <div class="content px-4">
      @Body
    </div>
  </div>
</div>
